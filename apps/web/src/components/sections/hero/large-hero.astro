---
import ButtonLink from "@/components/shared/button-link.astro";
import { Heading } from "@/components/shared/typography/heading";
import type { ModularPageSection } from "../types";

type Props = ModularPageSection<"section.hero">;

const props = Astro.props;
---

<div class="relative aspect-video">
  <slot />
  <div
    class="absolute bottom-0 left-1/2 z-10 flex w-full -translate-x-1/2 flex-col items-center justify-center gap-xl text-balance px-s py-2xl text-center lg:max-w-[680px] lg:py-6xl"
  >
    <Heading
      className="text-white leading-[100%]!"
      desktopSize="5xl"
      font="serif"
      mobileSize="3xl"
      tag="h1"
    >
      {props.title}
    </Heading>
    {props.cta?.link ? (
      <ButtonLink href={props.cta.link} size="lg" variant="primary">
        {props.cta.label}
      </ButtonLink>
    ) : null}
  </div>
</div>
