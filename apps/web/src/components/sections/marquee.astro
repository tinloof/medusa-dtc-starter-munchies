---
import { Label } from "../shared/typography/label";
import type { ModularPageSection } from "./types";

type Props = ModularPageSection<"section.marquee">;

const props = Astro.props;
---

<section
  class="mx-auto flex max-w-max-screen items-center gap-20 overflow-hidden px-xl py-2xl"
  {...props.rootHtmlAttributes}
>
  {Array(2).fill(null).map(() => (
    <div class="flex shrink-0 animate-marquee items-center justify-start gap-20 [--duration:15s] [--gap:5rem]">
      {props.text?.map((_item) => (
        <Label
          className="whitespace-nowrap"
          font="display"
          mobileSize="6xl"
        >
          {_item}
        </Label>
      ))}
    </div>
  ))}
</section>
