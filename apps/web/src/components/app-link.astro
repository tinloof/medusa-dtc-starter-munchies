---
import type { HTMLAttributes } from "astro/types";
import type { VariantProps } from "class-variance-authority";
import { styles } from "@/components/button";
import LocalizedLink from "./localized-link.astro";

interface Props extends HTMLAttributes<"a">, VariantProps<typeof styles> {
  asChild?: boolean;
  prefetch?: boolean;
}

const { asChild, class: className, size, variant, ...rest } = Astro.props;
---

<LocalizedLink
  class={styles({
      className,
      size,
      variant,
    })}
  {...rest}
>
  <slot />
</LocalizedLink>
