---
import type { Footer as FooterType } from "@packages/sanity/types";
import DefaultFooter from "./default-footer.astro";
import SimpleFooter from "./simple-footer.astro";

interface Props extends FooterType {
  variant?: "default" | "simple";
}

const { variant = "default", ...footer } = Astro.props;
---

{variant === "default" ? <DefaultFooter {...footer} /> : <SimpleFooter {...footer} />}
